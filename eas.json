{
  "build": {
    "base": {
      "distribution": "store",
      "ios": {
        "env": {
          "PLATFORM": "ios"
        }
      },
      "android": {
        "env": {
          "PLATFORM": "android"
        },
        "buildType": "app-bundle"
      }
    },
    "PROD": {
      "extends": "base",
      "ios": {
        "releaseChannel": "ios-prod"
      },
      "android": {
        "releaseChannel": "android-prod"
      }
    },
    "EXTRA": {
      "extends": "base",
      "ios": {
        "releaseChannel": "ios-staging"
      },
      "android": {
        "releaseChannel": "android-staging"
      }
    },
    "production": {
      "extends": "base"
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "android": {
        "buildType": "apk"
      },
      "distribution": "internal"
    }
  },
  "submit": {
    "PROD": {
